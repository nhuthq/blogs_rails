<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br/>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.text_field :short_description, class: 'form-control', placeholder: 'Short description' %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.text_area :content, class: 'form-control', placeholder: 'Content' %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.label :published %>
    <%= form.check_box :published, class: "form-check-input", type: "checkbox" %>
  </div>

  <br/>

  <div class="form-group">
    <%= form.label :published_at %>
    <%= form.datetime_field :published_at %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.number_field :author_id, id: :post_author_id, class: 'form-control', value: current_author.id, type: :hidden %>
  </div>
  <br/>

  <div class='actions'>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
